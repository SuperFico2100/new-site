---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="This is SuperFico2100's personal website. ">
        <meta name="keywords" content="SuperFico2100, SuperFico, Super, Fico, Super Fico, developer, gamer, astro, tailwind css, tailwind">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/*html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #404040;
	}*/
	:root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
    }

    html {
        font-family: system-ui, sans-serif;
        background: #3b3b3b;
        background-size: 224px;
    }

    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>
<!-- Down here is the common CSS used in the pages for text and navbars -->
<style>
    main {
        margin: auto;
        padding: 1rem;
        max-width: 800px;
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .welc-start {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .pfp {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .welc-content {
        flex-grow: 1;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .projects {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .coolyellow {
        color: #ffd700;
        text-decoration: none;
    }

    .coolblue:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        background-clip: text;
        -webkit-background-clip: text;
    }

    .project-site {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        padding: 0;
    }
</style>