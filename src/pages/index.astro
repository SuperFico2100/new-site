<style>
    main {
        margin: auto;
        padding: 1rem;
        max-width: 800px;
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .welc-start {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .pfp {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .welc-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .Spotify {
        background-image: linear-gradient(90deg, #4caf50, #9acd32);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .projects {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .coolyellow {
        color: #ffd700;
        text-decoration: none;
    }

    .coolyellow:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        background-clip: text;
        -webkit-background-clip: text;
    }

    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .age{
        display: inline-block;
    }

    .project-site {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        padding: 0;
    }

    .spotify-player {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .icons{
        display: flex;
    }

    .icons img{
        margin-right: 10px;
    }

    .specs{
        font-size: 0.875rem /* 14px */;
        line-height: 1.25rem /* 20px */;
        list-style-type: disc;
        list-style-position: inside;
    }

    .flex img{
        padding-right: 2%;
    }
    
    @media (max-width: 768px) {
        .link-card-grid {
            grid-template-columns: 1fr;
        }
        .flex{
            flex-direction: column;
        }
    }

    img.emoji {
      cursor: pointer;
      height: 1em;
      width: 1em;
      margin: 0 .05em 0 .1em;
      vertical-align: -0.1em;
    }
</style>

<script>
    const agePart = document.querySelector(".age");
    const birthDate = new Date(1245279600000); 
    const interval = 1000 * 60; 
    const getAge = () => new Date(Date.now() - birthDate).getUTCFullYear() - 1970;
    let age = localStorage.getItem("age") || getAge();
    agePart.innerText = `${age} years old`;

    const updateAge = () => {
        age = getAge();
        const text = `${age} years old`;
        localStorage.setItem("age", age); 
        agePart.innerText = text;
        setTimeout(updateAge, interval); 
    };
    updateAge();
</script>