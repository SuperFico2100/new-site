---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import "./navbar.css"
---

<Layout title="Home - SuperFico2100">
	<main>
		<section class="welc-start">
			<img class="pfp" src="pfp.png" alt="SuperFico2100" />
			<div class="welc-content">
				<h1>
					This is <span class="name-colored">SuperFico2100</span>.
				</h1>
			</div>
		</section>
		<nav class="navbar">
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="#">Info</a></li>
				<li><a href="./contact">Contact Me</a></li>
			</ul>
		</nav>
		<section></section>
		<section></section>
		<section id="repos">
			<h2 class="text-2xl font-bold tracking-tight mt-5">
				My GitHub Repositories
			</h2>
			<p class="mb-2 text-sm text-gray-400">
				These are the projects I've worked on that are available on
				GitHub by clicking on them.
			</p>
			
		</section>
		<section id="Spotify">
			<h2 class="text-2xl font-bold tracking-tight mt-5">
				I'm now listening to ⬇️
			</h2>
			<div class="spotify-player">
				<a href="">
					<img
						src="https://spotify-github-profile.kittinanx.com/api/view?uid=edot2007&cover_image=true&theme=novatorem&show_offline=true&background_color=121212&interchange=false&bar_color=53b14f&bar_color_cover=false"
						alt=""
					/>
				</a>
			</div>
		</section>
	</main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        max-width: 800px;
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .welc-start {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .pfp {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .welc-content {
        flex-grow: 1;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .Spotify {
        background-image: linear-gradient(90deg, #4caf50, #9acd32);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .projects {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .coolyellow {
        color: #3498db;
        text-decoration: none;
    }

    .coolblue:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        background-clip: text;
        -webkit-background-clip: text;
    }

    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .project-site {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        padding: 0;
    }

    .spotify-player {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    @media (max-width: 768px) {
        .link-card-grid {
            grid-template-columns: 1fr;
        }
    }
</style>