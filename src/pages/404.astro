---
import Layout from "../layouts/Layout.astro";
import "./navbar.css"
---

<Layout title="404 Not Found - SuperFico2100">
    <main>
        <section class="welc-start">
			<img class="pfp" src="pfp.png" alt="SuperFico2100" />
			<div class="welc-content">
				<h1>
					This is <span class="text-gradient">SuperFico2100</span>.
				</h1>
			</div>
		</section>
        <nav class="navbar">
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="#">Info</a></li>
				<li><a href="#">Contact Me</a></li>
			</ul>
		</nav>
        <section>
            Nothing found. <br>
            Maybe try to go back <a class="coolyellow" href="/">home</a>?
        </section>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        max-width: 800px;
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .welc-start {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .pfp {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .welc-content {
        flex-grow: 1;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .projects {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .coolyellow {
        color: #ffd700;
        text-decoration: none;
    }

    .coolblue:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #ffd700, #ffa500);
        background-clip: text;
        -webkit-background-clip: text;
    }

    .project-site {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        padding: 0;
    }
</style>